    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="4dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <TextView
        android:id="@+id/tv"
